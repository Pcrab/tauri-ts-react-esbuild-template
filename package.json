{
    "name": "pfsv",
    "private": true,
    "version": "0.0.1",
    "type": "module",
    "scripts": {
        "compile": "ts-node --esm esbuild.compile.ts",
        "check": "tsc --noEmit",
        "dev": "tauri dev",
        "lint": "eslint src --fix && stylelint 'src/**/*.scss' --fix",
        "preinstall": "npx only-allow pnpm",
        "prepare": "husky install",
        "watch": "concurrently 'pnpm watch:src' 'pnpm watch:server'",
        "watch:src": "ts-node --esm esbuild.watch.ts",
        "watch:server": "http-server ./dist -p 1420 -s"
    },
    "dependencies": {
        "@tauri-apps/api": "^1.2.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-router-dom": "^6.4.3"
    },
    "devDependencies": {
        "@tauri-apps/cli": "^1.2.0",
        "@types/node": "^18.11.9",
        "@types/react": "^18.0.25",
        "@types/react-dom": "^18.0.8",
        "@typescript-eslint/eslint-plugin": "^5.42.1",
        "@typescript-eslint/parser": "^5.42.1",
        "autoprefixer": "^10.4.13",
        "concurrently": "^7.5.0",
        "esbuild": "^0.15.13",
        "esbuild-sass-plugin": "^2.4.0",
        "eslint": "^8.27.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-prettier": "^4.2.1",
        "http-server": "^14.1.1",
        "husky": "^8.0.2",
        "postcss": "^8.4.19",
        "postcss-modules": "^6.0.0",
        "prettier": "^2.7.1",
        "rimraf": "^3.0.2",
        "stylelint": "^14.14.1",
        "stylelint-config-prettier": "^9.0.4",
        "stylelint-config-prettier-scss": "^0.0.1",
        "stylelint-config-standard-scss": "^6.1.0",
        "stylelint-prettier": "^2.0.0",
        "ts-node": "^10.9.1",
        "typescript": "^4.8.4"
    }
}
