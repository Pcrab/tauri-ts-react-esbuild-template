{
    "name": "tauri-ts-react-esbuild-template",
    "private": true,
    "version": "0.0.1",
    "type": "module",
    "scripts": {
        "compile": "ts-node --esm esbuild.compile.ts",
        "check": "tsc --noEmit",
        "dev": "tauri dev",
        "lint": "eslint src && stylelint 'src/**/*.scss'",
        "preinstall": "npx only-allow pnpm",
        "prepare": "husky install",
        "watch": "concurrently 'pnpm watch:src' 'pnpm watch:server'",
        "watch:src": "ts-node --esm esbuild.watch.ts",
        "watch:server": "http-server ./dist -p 1420 -s"
    },
    "config": {
        "commitizen": {
            "path": "node_modules/cz-conventional-changelog"
        }
    },
    "prettier": "@pcrab/prettier-config",
    "dependencies": {
        "@tauri-apps/api": "^1.2.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-router-dom": "^6.6.2"
    },
    "devDependencies": {
        "@commitlint/cli": "^17.4.2",
        "@commitlint/config-conventional": "^17.4.2",
        "@pcrab/prettier-config": "^0.1.0",
        "@tauri-apps/cli": "^1.2.2",
        "@types/node": "^18.11.18",
        "@types/react": "^18.0.26",
        "@types/react-dom": "^18.0.10",
        "@typescript-eslint/eslint-plugin": "^5.48.2",
        "@typescript-eslint/parser": "^5.48.2",
        "autoprefixer": "^10.4.13",
        "commitizen": "^4.2.6",
        "concurrently": "^7.6.0",
        "esbuild": "^0.15.18",
        "esbuild-sass-plugin": "^2.4.5",
        "eslint": "^8.32.0",
        "eslint-config-prettier": "^8.6.0",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-prettier": "^4.2.1",
        "http-server": "^14.1.1",
        "husky": "^8.0.3",
        "postcss": "^8.4.21",
        "postcss-modules": "^6.0.0",
        "prettier": "^2.8.3",
        "rimraf": "^3.0.2",
        "stylelint": "^14.16.1",
        "stylelint-config-prettier": "^9.0.4",
        "stylelint-config-prettier-scss": "^0.0.1",
        "stylelint-config-standard-scss": "^6.1.0",
        "stylelint-prettier": "^2.0.0",
        "ts-node": "^10.9.1",
        "typescript": "^4.9.4"
    }
}
